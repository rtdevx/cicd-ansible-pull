# NOTE: Groups

servers:
  children:
    servers:
    workstations:

# INFO: Server Groups
servers:
  children:
    servers_utility[-2] == 's':
    servers_iac:

# INFO: Workstation Groups
workstations:
  children:
    workstations_general:
    workstations_dev:

